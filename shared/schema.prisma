datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String
  lastname  String
  suspend   Boolean @default(false)
  role      Role
}

model Teacher {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  firstname String
  lastname  String
  students  Student[]
}

model Student {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  firstname String
  lastname  String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])

  teacherId String

  @@index([teacherId])
}

enum Role {
  TEACHER
  STUDENT
}
